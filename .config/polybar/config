height = 25
line-size = 2
offset-x = 7.5%
offset-y = 1%
fixed-center = true
wm-restack = bspwm
	
background = ${colors.background}
foreground = ${colors.foreground}

border-size = 2
border-color = ${colors.foreground}

modules-left = bspwm battery
modules-center = time_icon date
modules-right = pavolume network ram cpu powermenu
