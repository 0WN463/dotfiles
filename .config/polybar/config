;-------------------------------------------------
;                                                ;
;          			BSPWM PARAMETERS 		     ;
;                                                ;
;-------------------------------------------------
[module/bspwm]
type = internal/bspwm
pin-workspaces = true
inline-mode = true
enable-click = false
enable-scroll = false
reverse-scroll = false
fuzzy-match = false

format = <label-state>

ws-icon-0=1;1
ws-icon-1=2;2
ws-icon-2=3;3
ws-icon-3=4;4
ws-icon-4=5;5
ws-icon-5=6;6
ws-icon-6=7;7
ws-icon-7=8;8

;NOTE: YOU CANNOT HAVE NAME AND ICON
;TOGETHER ONLY ONE OR THE OTHER!!

label-dimmed-occupied-underline = ${colors.background} 
label-dimmed-empty-underline = ${colors.background} 
label-dimmed-focused-underline = ${colors.blue} 

label-focused-underline = ${colors.gold} 
label-focused-empty-underline = ${colors.gold} 

label-focused = %icon%
label-focused-background = ${colors.blue} 
label-focused-foreground = ${colors.cyan} 
label-focused-padding = 1

label-focused-empty = %icon%
label-focused-empty-foreground = ${colors.grey} 
label-focused-empty-background = ${colors.blue} 
label-focused-empty-padding = 1

label-occupied = %icon%
label-occupied-foreground = ${colors.white}
label-occupied-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.grey}
label-empty-padding = 1

;-------------------------------------------------
;                                                ;
;          		DATE PARAMETERS		 		     ;
;                                                ;
;-------------------------------------------------
[module/date]
type = internal/date
interval = 1.0
date = %a, %d-%b
time = %I:%M %p

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %A, %d %B %Y
time-alt = %r

format = <label>
format-foreground = ${colors.white}

label = %date% %time%
label-foreground = ${colors.white}

